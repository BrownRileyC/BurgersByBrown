<h1>Burgers By Brown!</h1>

<div class="column">
    <h2>Burgers to Eat</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{burger_name}}

            <button class="eat-burger" data-id="{{id}}" data-newState="1">Eat Me!</button>
        </li>

        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="column">
    <h2>Burgers Already Eaten</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<form class="create-form">
<h2>Add a Custom Burger</h2>
    <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>
    <button type="submit">Make Burger</button>
</form>