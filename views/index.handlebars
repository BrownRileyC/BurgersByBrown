<h1>Burgers By Brown!</h1>

<h2>Burgers to Eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{name}}

        <button class="eat-burger" data-id="{{id}}" data-newState="{{devoured}}">Eat Me!</button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Already Eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Custom Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>
    <button type="submit">Make Burger</button>
</form>